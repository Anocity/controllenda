{
  "name": "mir4-account-manager-desktop",
  "version": "1.0.0",
  "description": "MIR4 Account Manager - Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": ["mir4", "gaming", "account-manager"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.mir4.accountmanager",
    "productName": "MIR4 Account Manager",
    "win": {
      "target": ["nsis"],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "build/**/*",
      "backend/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}
